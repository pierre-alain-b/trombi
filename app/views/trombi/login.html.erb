<h1>Please login</h1>

<% form_tag do %>

  <fieldset>
  <legend>Please enter username and password</legend>
  
  <p>
  	<label for="name">User name :</label>
    	<%= text_field_tag :name, params[:name] %>
  </p>
  <p>
    	<label for="password">Password :</label>
    	<%= password_field_tag :password, params[:password] %>
  </p>
  <p>
    <%= submit_tag "Log in" %>
  </p>
  
  </fieldset>
<% end %>
