<div class='loginform'>

<%= form_tag do %>
  
<ol>
	<li>
  		<label for="name"><%= I18n.t('g.username') %></label>
  		<%= text_field_tag :name, params[:name] %>
    	</li>
    	<li>
    		<label for="password"><%= I18n.t('g.password') %></label>
    		<%= password_field_tag :password, params[:password] %>
    	</li>
    	<li>
    		<label>&nbsp;</label>
    		<%= submit_tag I18n.t('layout.login') %>
    	</li>
</ol>
  
<% end %>

</div>
