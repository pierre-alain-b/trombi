<h2>Account of user <%=@user.name%></h2>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <fieldset>
  <legend>Please change user details</legend>
  
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.submit 'Update password' %>
  </p>
  
  </fieldset>
  
<% end %>
