<h2>Modify your account</h2>

<% form_tag do %>

  <fieldset>
  <legend>Please change user details</legend>
  
  <p>
    <label for="old_password">Old password :</label>
    <%= password_field_tag :old_password, params[:old_password] %>
  </p>
  <p>
    <label for="password">New password :</label>
    <%= password_field_tag :password, params[:password] %>
  </p>
  <p>
    <label for="password_confirmation">Confirm new password :</label>
    <%= password_field_tag :password_confirmation, params[:password_confirmation] %>
  </p>
  <p>
    <%= submit_tag 'Update account' %>
  </p>
  
  </fieldset>
  
<% end %>
