<h1>New user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <fieldset>
  <legend>Please enter admin user details</legend>
  
  <p>
  <%= f.label :name, "User name" %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.label :level %><br />
    <%= f.text_field :level, :value=>"0" %>
  </p>
  <p>
    <%= f.submit 'Add user' %>
  </p>
  
  </fieldset>
<% end %>

<%= link_to 'Back', users_path %>