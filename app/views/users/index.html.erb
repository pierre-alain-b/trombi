<h1><%= I18n.t('views.users.index.title') %></h1>

<div id="commands">
	<%= link_to I18n.t('views.users.index.new_user'), new_user_path %>
</div>

<table>
  <tr>
    <th><%= I18n.t('g.username') %></th>
    <th><%= I18n.t('g.level') %></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.name %></td>
    <td><%=h user.level %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => I18n.t('g.are_you_sure') , :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

