<h1><%= I18n.t('views.people.index.title') %></h1>

<div id="commands">
<%= link_to I18n.t('views.people.index.new_person'), new_person_path %>
</div>

<div class="person-list">

<table>
  <tr class="list-line-header">
    <th><%=I18n.t('g.first_name')%></th>
    <th><%=I18n.t('g.last_name')%></th>
    <th><%=I18n.t('g.email')%></th>
    <th><%=I18n.t('g.phone1')%></th>
    <th><%=I18n.t('g.phone2')%></th>
    <th><%=I18n.t('g.skype_id')%></th>
    <th><%=I18n.t('g.address')%></th>
  </tr>

<% @people.each do |person| %>
  <tr class="<%= cycle('list-line-odd', 'list-line-even') %>">
    
    <td><%=h person.first_name %></td>
    <td><%=h person.last_name %></td>
    <td><%=h person.email %></td>
    <td><%=h person.phone1 %></td>
    <td><%=h person.phone2 %></td>
    <td><%=h person.skype_id %></td>
    <td><%=h person.address %></td>
    <td class="list-actions">
    	<%= link_to I18n.t('g.show'), person %><br/>
    	<%= link_to I18n.t('g.edit'), edit_person_path(person) %><br/>
    	<%= link_to I18n.t('g.destroy'), person, :confirm => I18n.t('g.are_you_sure'), :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

</div>